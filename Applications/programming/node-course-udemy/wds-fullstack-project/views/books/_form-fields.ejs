<label>Title</label>
<input type="text" name="title" value="<%= book.title%>">

<label>Author</label>
<select name="author">
    <% authors.forEach(author => { %>
        <% if (author.id === book.author) { %> 
            <option selected label="<%= author.author %>" value="<%= author.id %>"></option>
       <% } else { %> 
            <option label="<%= author.author %>" value="<%= author.id %>"></option>
        <% } %> 
    <% }) %> 
</select>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishedDate" 
        value="<%= book.publishedDate === null ? '' :
         book.publishedDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Page Count</label>
    <input type="number" min="1" name="pageCount">
</div>
<div>
    <label>Cover</label>
    <input class="filepond" type="file" name="cover">
</div>
<div>
    <label>Description</label>
    <textarea name="description" rows="10" cols="30"><%= book.description %></textarea>
</div>